  <body>
    <%-include("includes/nav.ejs") %>
    <div
      class="container d-flex justify-content-center align-items-center vh-100"
    >
      <div class="card border-success mb-3 " style="max-width: 28rem">
        <div class="card-header" id="card-header">Post Your Guess Number</div>
        <div class="card-body text-success">
          <h5 class="card-title">Wish You üëç"ALL THE BEST" üëç</h5>
          <form class="row gy-2 gx-3 align-items-center" method="post" action="https://guess-ghez.onrender.com/game">
            <div class="col-auto">
              <label class="visually-hidden" for="autoSizingInput">Name</label>
              <input
                type="text"
                class="form-control"
                id="autoSizingInput"
                placeholder="Name"
                name="name"
                required
              />
            </div>

            <div class="col-auto">
              <label class="visually-hidden" for="autoSizingInput">Number</label>
              <input
                type="number"
                class="form-control"
                id="autoSizingInput"
                placeholder="Enter Number"
                name="number"
                required
              />
            </div>


            <div class="col-auto">
              <label class="visually-hidden" for="autoSizingInputGroup"
                >Username</label
              >
              <div class="input-group">
                <div class="input-group-text">@</div>
                <input
                  type="text"
                  class="form-control"
                  id="autoSizingInputGroup"
                  placeholder="Username"
                  name="Username"
                  required
                />
              </div>
            </div>
            <div class="col-auto">
              <label class="visually-hidden" for="amountSelect"
                >Preference</label
              >
              <select class="form-select" id="amountSelect" name="money" required>
                <option value="" selected disabled>Choose...</option>
                <option value="5">Five Rupees</option>
                <option value="10">Ten Rupees</option>
                <option value="50">Fifty Rupees</option>
                <option value="100">Hundred Rupees</option>
              </select>
            </div>

